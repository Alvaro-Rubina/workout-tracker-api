<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Importar la configuración por defecto de Spring Boot -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- Obtener el patrón de Spring Boot -->
    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSSXXX}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>

    <!-- Appender personalizado con formato Spring Boot pero colores personalizados -->
    <appender name="CUSTOM_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSSXXX}}){faint} %clr(%5p) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %clr(%m){%replace(%level){
                'TRACE', 'magenta',
                'DEBUG', 'blue',
                'INFO', 'green',
                'WARN', 'yellow',
                'ERROR', 'red'
                }}%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Configuración para tus propios loggers -->
    <logger name="org.alvarub.workouttrackerproject" level="INFO" additivity="false">
        <appender-ref ref="CUSTOM_CONSOLE"/>
    </logger>

    <!-- Configuración para el resto de la aplicación (mantiene la configuración por defecto) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>